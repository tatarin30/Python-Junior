from homework_4_2 import CompareFactory
import pprint

def main():
    new_name_list = []  
    word_list = [
        'компьютер',
        'компьютеризация',
        'роза',
        'море',
        'горе',
        'гора',
        'персона',
        'персонализация',
        'терраса',
        'территория',
        'поза',
        'лоза',
        'компьютерщик',
        'персональность',
        'индивидуальность']
    print ('''
        Методы сравнения строк:
        1 - Метод Джаро-Винклера
        2 - Вычисление растояния Левенштейна
        ''')
    user_input = int(input('Выберите метод сравнения строк: '))
    while user_input < 1 or user_input > 2:
        user_input = int(input('Введите правильное значение от 1 до 2: '))
    comparer = CompareFactory.create(user_input)
    for i in word_list:
        for j in word_list:
            if i != j:
                new_name_list.append(comparer.compare(i, j))  
    pprint.pprint(new_name_list)

main()
